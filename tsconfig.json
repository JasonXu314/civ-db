{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "es2017", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"paths": {
			"$/*": ["components/*"],
			"@/*": ["util/*"],
			"&/*": ["sass/*"],
			"/*": ["./*"]
		},
		"baseUrl": "."
	},
	"exclude": ["node_modules", ".next", "out", "next.config.js"],
	"include": ["next-env.d.ts", "types.d.ts", "**/*.ts", "**/*.tsx"]
}
